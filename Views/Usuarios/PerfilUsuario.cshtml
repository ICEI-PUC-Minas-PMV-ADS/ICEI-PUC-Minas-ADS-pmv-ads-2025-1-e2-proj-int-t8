@model LanceCertoSQL.ViewModels.UsuarioPerfilViewModel

@{
    ViewData["Title"] = "Meu Perfil";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">Meu Perfil</h2>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow rounded">
                @if (!string.IsNullOrEmpty(Model.FotoPerfil))
                {
                    <img src="@Model.FotoPerfil" alt="Foto de Perfil" class="card-img-top" style="height: 240px; object-fit: cover;" />
                }
                else
                {
                    <img src="https://via.placeholder.com/600x240.png?text=Foto+de+Perfil" alt="Foto Padrão" class="card-img-top" />
                }

                <div class="card-body">
                    <h4 class="text-primary mb-3">@Model.Nome (@Model.UserName)</h4>

                    <h5 class="text-secondary"><i class="bi bi-person-fill me-1"></i>Informações Pessoais</h5>
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item"><strong>Data de Nascimento:</strong> @Model.DataNascimento?.ToString("dd/MM/yyyy")</li>
                        <li class="list-group-item"><strong>Estado:</strong> @Model.Estado</li>
                        @if (Model.Status == LanceCertoSQL.Models.StatusConta.Administrador)
                        {
                            <li class="list-group-item"><strong>Status:</strong> Administrador</li>
                        }
                        <li class="list-group-item"><strong>CRECI:</strong> @Model.CRECI</li>
                    </ul>

                    <h5 class="text-secondary"><i class="bi bi-geo-alt-fill me-1"></i>Endereço</h5>
                    <ul class="list-group list-group-flush mb-4">
                        <li class="list-group-item"><strong>CEP:</strong> @Model.CEP</li>
                        <li class="list-group-item"><strong>Cidade:</strong> @Model.Cidade</li>
                        <li class="list-group-item"><strong>Bairro:</strong> @Model.Bairro</li>
                        <li class="list-group-item"><strong>Rua / Avenida:</strong> @Model.Rua</li>
                        <li class="list-group-item"><strong>Número:</strong> @Model.Numero</li>
                        <li class="list-group-item"><strong>Complemento:</strong> @Model.Complemento</li>
                    </ul>

                    <div class="d-grid gap-2">
                        <a asp-action="EditarPerfilUsuario" asp-controller="Usuarios" class="btn btn-outline-primary">Editar Perfil</a>
                        <a asp-action="ListaFiltrada" asp-controller="Pregoes" class="btn btn-outline-secondary">Lista de Leilões</a>
                        <a asp-action="RegistrarLeilao" asp-controller="Pregoes" class="btn btn-outline-secondary">Criar Leilão</a>
                        <a asp-action="Create" asp-controller="Imoveis" class="btn btn-outline-secondary">Cadastrar Imóvel</a>
                        <a asp-action="Index" asp-controller="Imoveis" class="btn btn-outline-secondary">Buscar Imóveis</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
